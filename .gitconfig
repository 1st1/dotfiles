[user]
	email = yury@edgedb.com
	name = Yury Selivanov

[color]
	ui = auto

[alias]
	wdiff = diff --color-words

[rerere]
	enabled = 1

[core]
	excludesfile = ~/.gitignore_global
	editor = /usr/bin/vim
	mergeoptions = --ff-only
	logoptions = --follow
	quotepath = false
	ignorecase = true

[push]
	default = simple

[merge]
	ff = only

[include]
	path = ~/.gitconfig.local

